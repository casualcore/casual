        Compile( 'source/xatmi_call.cpp'),
        Compile( 'source/platform.cpp'),
        
        Compile( 'source/trace.cpp', 'obj/trace.o'),
    ],
    ['casual-common', 'casual-xatmi', 'yaml-cpp', 'json-c', 'pugixml'])

install_lib.append( lib_sf)

