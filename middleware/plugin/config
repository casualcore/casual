ngx_addon_name=ngx_http_xatmi_module
HTTP_MODULES="$HTTP_MODULES ngx_http_xatmi_module"
NGX_ADDON_SRCS="$NGX_ADDON_SRCS $ngx_addon_dir/ngx_http_xatmi_module.c $ngx_addon_dir/xatmi_handler.c"
CORE_INCS="$CORE_INCS $CASUAL_MAKE_SOURCE_ROOT/middleware/xatmi/include $CASUAL_MAKE_SOURCE_ROOT/middleware/http/include"

platform=`uname`

if [[ "$platform" -eq "Darwin" ]]; then
   CORE_LIBS="$CORE_LIBS -L$CASUAL_MAKE_SOURCE_ROOT/middleware/xatmi/bin -lcasual-xatmi -L$CASUAL_MAKE_SOURCE_ROOT/middleware/http/bin -lcasual-http-inbound-common"
else
   CORE_LIBS="$CORE_LIBS -L$CASUAL_MAKE_SOURCE_ROOT/middleware/xatmi/bin -Wl,-rpath=$CASUAL_MAKE_SOURCE_ROOT/middleware/xatmi/bin -lcasual-xatmi -L$CASUAL_MAKE_SOURCE_ROOT/middleware/http/bin -Wl,-rpath=$CASUAL_MAKE_SOURCE_ROOT/middleware/http/bin -lcasual-http-inbound-common -Wl,-rpath=$CASUAL_MAKE_SOURCE_ROOT/middleware/common/bin"
fi