        Compile( 'unittest/isolated/source/archive/test_write_read.cpp'),
        Compile( 'unittest/isolated/source/archive/test_relaxed_write_read.cpp'),
        Compile( 'unittest/isolated/source/archive/test_yaml.cpp'),
        Compile( 'unittest/isolated/source/archive/test_json.cpp'),
        Compile( 'unittest/isolated/source/archive/test_xml.cpp'),
        Compile( 'unittest/isolated/source/archive/test_ini.cpp'),
        Compile( 'unittest/isolated/source/archive/test_service.cpp'),
        Compile( 'unittest/isolated/source/archive/test_log.cpp'),
        Compile( 'unittest/isolated/source/archive/test_line.cpp'),
    ],
	[ lib_sf, 'casual-xatmi', 'casual-common', 'casual-mockup', 'casual-unittest', 'yaml-cpp', 'pugixml'])

